{
  "name": "page",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run html:build && npm run css:build && npm run js:build",
    "serve": "cross-env NODE_ENV=production webpack-dev-server",
    "dev": "npm run build:dev && webpack-dev-server",
    "js:analyze": "cross-env NODE_ENV=analyze webpack",
    "js:watch": "webpack --watch",
    "css:watch": "npm run css:build:dev -- --watch",
    "html:watch": "npm run html:build:dev -- --watch",
    "build:dev": "npm run html:build:dev && npm run css:build:dev && npm run js:build:dev",
    "js:build:dev": "webpack",
    "css:build:dev": "sass src/styles:dist/css --error-css",
    "html:build:dev": "pug ./src/template/pages --path ./src/template --out ./dist --pretty",
    "js:build": "cross-env NODE_ENV=production webpack",
    "css:build": "sass src/styles:build/css --no-source-map --style compressed",
    "html:build": "pug ./src/template/pages --path ./src/template --out ./build"
  },
  "author": "Assper",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.0.1",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^6.0.3",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.24.0",
    "terser-webpack-plugin": "^2.3.1",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
