{
  "name": "page",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.conf.js",
    "serve": "cross-env NODE_ENV=production webpack serve --config ./config/webpack.prod.conf.js",
    "dev": "webpack serve --open --config ./config/webpack.dev.conf.js",
    "analyze": "cross-env NODE_ENV=analyze webpack --config ./config/webpack.prod.conf.js",
    "build:dev": "webpack --config ./config/webpack.dev.conf.js",
    "watch": "webpack --watch --config ./config/webpack.dev.conf.js",
    "lint:css": "stylelint ./src/css/**/*.{css,scss}",
    "lint:js": "eslint --fix ./src/**/*.js",
    "format": "prettier --write ./src/**/*.js",
    "lint": "npm run format && npm run lint:css && npm run lint:js"
  },
  "author": "Assper",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.21.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.2",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^7.0.0",
    "postcss": "^8.2.7",
    "postcss-loader": "^4.2.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.1",
    "pug-loader": "^2.4.0",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.11.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.19.0",
    "webpack": "^5.24.3",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
